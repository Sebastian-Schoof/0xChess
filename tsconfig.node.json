{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,

        "baseUrl": "src",
        "paths": {
            "game/*": ["game/*"],
            "socketIO/*": ["socketIO/*"]
        },
        "outDir": "build",
    },
    "include": ["src"],
    "exclude": ["src/components", "src/**/*.tsx"],

    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}